<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/passage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passage 1"
        android:textAllCaps="false"
        android:onClick="openPassageActivity"
        app:layout_constraintBottom_toTopOf="@+id/passage2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/passage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passage 2"
        android:textAllCaps="false"
        android:onClick="openPassageActivity"
        app:layout_constraintBottom_toTopOf="@+id/passage3"
        app:layout_constraintEnd_toEndOf="@+id/passage1"
        app:layout_constraintStart_toStartOf="@+id/passage1"
        app:layout_constraintTop_toBottomOf="@+id/passage1" />

    <Button
        android:id="@+id/passage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passage 3"
        android:textAllCaps="false"
        android:onClick="openPassageActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passage2"
        app:layout_constraintStart_toStartOf="@+id/passage2"
        app:layout_constraintTop_toBottomOf="@+id/passage2" />

</androidx.constraintlayout.widget.ConstraintLayout>